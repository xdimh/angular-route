@import 'var';
@import 'functions.mcss';

$size = ($width, $height){
    $height ?= $width;
    height: $height; 
    width: $width; 
}
// __exmaple__:
// div{
//     $size: 50px
// }


// 不带参数, 可视为一个block模版  
$clearfix = {
    *zoom: 1;
    &:before, &:after {
        display: table;
        content: "";
        line-height: 0; 
    }
    &:after {
        clear: both; 
    }
}
// __example__:
